#!/bin/sh -e

./configure \
    --enable-static \
    --with-timestamp \
    --without-pam

make

install -Dm4755 doas      "$1/usr/bin/doas"
install -Dm640  doas.conf "$1/etc/doas.conf"

# Install manual pages.
for man in doas.1 doas.conf.5; do
    install -Dm644 "$man" "$1/usr/share/man/man${man##*.}/$man"
done
